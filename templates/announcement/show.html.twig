{% extends 'layout.html.twig' %}

{% block title %} {{ announcement.title }} - ref: {{ announcement.id }} - {{ parent() }}{% endblock %}

{% block body %}

<h1 class="announcement-title">
    <span>{{ announcement.title}}</span>
</h1>
<div class="">
{{ announcement.category.name }}
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ announcement.img1 ? '../' ~ announcement.img1 : 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/No_image_available_600_x_450.svg/600px-No_image_available_600_x_450.svg.png' }}" style:"width:300px;" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ announcement.img2 ? '../' ~ announcement.img2 : 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/No_image_available_600_x_450.svg/600px-No_image_available_600_x_450.svg.png' }}" style:"width:300px;" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ announcement.img3 ? '../' ~ announcement.img3 : 'https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/No_image_available_600_x_450.svg/600px-No_image_available_600_x_450.svg.png' }}" style:"width:300px;" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container announcement">
    <div class="row">
        <div class="col-12 col-md-8 py-4">
            {{ announcement.description }}
        </div>
        <div class="col-12 col-md-4 bg-dark text-light py-4">

            <div class="">
                <strong>Prix : </strong>
                {{ announcement.price ? announcement.price ~ '€' : 'Gratuit' }}
            </div>
            <div class="">
                <strong>État : </strong>
                {{ announcement.status }}
            </div>
            <div class="">
                <strong>Date de publication : </strong>
                {{ announcement.date|date('d/m/Y') }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="">
                <strong>Vendeur : </strong>
                {{ announcement.username }}
            </div>
            <div class="">
                <strong>Email : </strong>
                {{ announcement.email }}
            </div>
            <div class="">
                <strong>Numéro de téléphone : </strong>
                {{ announcement.phone }}
            </div>
        </div>
    </div>
</div>

{% endblock %}